<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.team2_wpi.android.student_event_registration.WelcomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/student_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="STUDENT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/organizer_btn"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/organizer_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="ORGANIZER"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/student_btn" />
</RelativeLayout>

